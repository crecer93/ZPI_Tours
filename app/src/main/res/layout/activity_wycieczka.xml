<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.zpi.zpi_tours.WycieczkaActivity">


    <GridLayout
    android:layout_width="fill_parent"
    android:layout_height="180dp"
    android:layout_alignParentRight="true"
        android:id="@+id/gridLayout">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="Nazwa Wycieczki"
            android:id="@+id/nazwa_w"
            android:textSize="30dp"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:text="Opis Wycieczki"
        android:id="@+id/opis_w"
        android:textSize="20dp"
        android:layout_row="1"
        android:layout_column="0" />
    </GridLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/gridLayout"
        android:layout_alignParentLeft="true">

        <TextView
            android:layout_width="106dp"
            android:layout_height="30dp"
            android:text="Długość "
            android:id="@+id/dlugosc_w"
            android:textSize="20dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="77dp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="Poziom "
            android:id="@+id/poziom_w"
            android:textSize="20dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView2" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Lokalizacja"
            android:id="@+id/lokalizacja_w"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:textSize="20dp"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Długość:"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_above="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Pożiom:"
            android:textSize="20dp"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/dlugosc_w" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Lokalizacja:"
            android:textSize="20dp"
            android:id="@+id/textView3"
            android:layout_below="@+id/dlugosc_w"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Data początku:"
            android:textSize="20dp"
            android:id="@+id/textView4"
            android:layout_below="@+id/lokalizacja_w"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="106dp"
            android:layout_height="30dp"
            android:text="Data początku"
            android:id="@+id/data_po"
            android:textSize="20dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_below="@+id/lokalizacja_w"
            android:layout_toRightOf="@+id/textView4"
            android:layout_alignRight="@+id/poziom_w" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Data końca:"
            android:textSize="20dp"
            android:id="@+id/textView6"
            android:layout_below="@+id/data_po"
            android:layout_toLeftOf="@+id/data_ko" />

        <TextView
            android:layout_width="106dp"
            android:layout_height="30dp"
            android:text="Data konca"
            android:id="@+id/data_ko"
            android:textSize="20dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_below="@+id/data_po"
            android:layout_alignLeft="@+id/data_po"
            android:layout_alignRight="@+id/data_po" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Cena:"
            android:textSize="20dp"
            android:id="@+id/textView8"
            android:layout_below="@+id/ilosc_m"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="106dp"
            android:layout_height="30dp"
            android:text="Cena"
            android:id="@+id/cena_w"
            android:textSize="20dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_alignTop="@+id/textView8"
            android:layout_toRightOf="@+id/textView8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Ilość pozostałych miejsc:"
            android:textSize="20dp"
            android:id="@+id/textView5"
            android:layout_below="@+id/data_ko"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="106dp"
            android:layout_height="30dp"
            android:text="Ilość"
            android:id="@+id/ilosc_m"
            android:textSize="20dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_alignTop="@+id/textView5"
            android:layout_toRightOf="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Email organizatora:"
            android:textSize="20dp"
            android:id="@+id/textView7"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="106dp"
            android:layout_height="30dp"
            android:text="Email"
            android:id="@+id/email_m"
            android:textSize="20dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_alignTop="@+id/textView7"
            android:layout_toRightOf="@+id/dlugosc_w" />

    </RelativeLayout>


</RelativeLayout>
