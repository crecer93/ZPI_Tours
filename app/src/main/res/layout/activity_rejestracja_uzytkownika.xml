<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.zpi.zpi_tours.RejestracjaUzytkownikaActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:id="@+id/llFormularz">
            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="E-mail:"
                android:id="@+id/labelEmail" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/textBoxEmail"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp">
            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="Hasło:"
                android:id="@+id/labelHaslo" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/textBoxHaslo"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:padding="10dp">
            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="Powtórz hasło:"
                android:id="@+id/labelPowtorzHaslo" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/textBoxPowtorzHaslo"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp">
            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="Imię:"
                android:id="@+id/labelImie" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/textBoxImie"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp">
            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="Nazwisko:"
                android:id="@+id/labelNazwisko" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/textBoxNazwisko"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp">
            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="Płeć:"
                android:id="@+id/labelPlec" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/spinnerPlec"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp">
            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="Miasto:"
                android:id="@+id/labelMiasto" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/spinnerMiasto" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zarejestruj się"
            android:id="@+id/buttonUtworz"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</RelativeLayout>
