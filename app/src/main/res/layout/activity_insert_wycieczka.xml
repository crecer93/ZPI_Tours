<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.zpi.zpi_tours.InsertWycieczkaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp"
                android:id="@+id/llFormularz">
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="Nazwa:"
                    android:id="@+id/labelNazwa" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/textBoxNazwa"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp">
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="L. miejsc:"
                    android:id="@+id/labelLiczbaMiejsc" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/textBoxLiczbaMiejsc"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp">
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="Opis:"
                    android:id="@+id/labelOpis" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/textBoxOpis"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp">
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="Długość:"
                    android:id="@+id/labelDlugosc" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/textBoxDlugosc"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp">
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="Trudność:"
                    android:id="@+id/labelTrudnosc" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerTrudnosc"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp">
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="Lokalizacja:"
                    android:id="@+id/labelLokalizacja" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/textBoxLokalizacja"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp">
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="Początek:"
                    android:id="@+id/labelDataPoczatku" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/textBoxDataPoczatku"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp">
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="Koniec:"
                    android:id="@+id/labelDataKonca" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/textBoxDataKonca"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp">
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="Cena:"
                    android:id="@+id/labelCena" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/textBoxCena"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp">
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="Moderator:"
                    android:id="@+id/labelModerator" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerModerator"/>
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Utwórz"
                android:id="@+id/buttonUtworz"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
